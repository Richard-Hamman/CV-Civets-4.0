Options +MultiViews

RewriteEngine On

# --- Security Headers ---
Header always set X-Frame-Options "DENY"
Header always set X-Content-Type-Options "nosniff"
Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

# --- Content Security Policy ---
Header always set Content-Security-Policy "default-src 'self'; connect-src 'self' https://*.clarity.ms https://c.bing.com https://stats.g.doubleclick.net https://www.googletagmanager.com https://chimpstatic.com https://api.web3forms.com https://www.google-analytics.com https://analytics.google.com https://www.google.com https://unpkg.com https://*.unpkg.com https://googleads.g.doubleclick.net https://www.googleadservices.com https://www.google.co.za; script-src 'self' 'unsafe-inline' https://*.clarity.ms https://c.bing.com https://cdnjs.cloudflare.com https://www.googletagmanager.com https://chimpstatic.com https://unpkg.com https://www.gstatic.com https://googleads.g.doubleclick.net https://www.googleadservices.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com data:; img-src 'self' data: https://*.clarity.ms https://c.bing.com https://cvcivets.co.za https://unpkg.com https://*.unpkg.com https://analytics.google.com https://www.google-analytics.com https://www.google.co.za https://googleads.g.doubleclick.net https://www.google.com https://www.googleadservices.com https://www.googletagmanager.com; media-src 'self' https://unpkg.com https://*.unpkg.com; frame-src 'self' https://www.googletagmanager.com https://googleads.g.doubleclick.net https://td.doubleclick.net; frame-ancestors 'none';"
# --- End Security Headers ---

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect from .html to extensionless
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,NE,L]

# Redirect www to non-www (choose one, not both)
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# SSL Redirect
RewriteCond %{HTTPS} !=on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# SPA fallback to index.html (exclude assets)
Options +SymLinksIfOwnerMatch
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$
RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|json|pdf|mp4|webm|ogg|txt|xml)$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
